package com.example.demo.service;

import java.util.List;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import com.example.demo.model.SchemeModel;
import com.example.demo.repositoryint.SchemeRepository;

@Service
public class SchemeService {

    @Autowired
    private SchemeRepository repo;

    public SchemeModel addScheme(SchemeModel model) {
        return repo.save(model);
    }

    public List<SchemeModel> getAllSchemes() {
        return repo.findAll();
    }

    public List<SchemeModel> searchSchemes(String keyword) {
        return repo.findBySchemeNameContainingIgnoreCase(keyword);
    }

    public SchemeModel updateScheme(Long id, SchemeModel updated) {
    	return repo.findById(id).map(s -> {
    	    s.setSchemeName(updated.getSchemeName());
    	    s.setDescription(updated.getDescription());
    	    s.setEligibility(updated.getEligibility());
    	    return repo.save(s);
    	}).orElse(null);

    }

    public String deleteScheme(Long id) {
        repo.deleteById(id);
        return "Scheme Deleted Successfully";
    }
}
