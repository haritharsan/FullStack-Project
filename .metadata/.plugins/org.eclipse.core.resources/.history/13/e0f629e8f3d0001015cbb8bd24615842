package com.example.demo.config;

import org.springframework.boot.web.embedded.tomcat.TomcatServletWebServerFactory;
import org.springframework.boot.web.server.WebServerFactoryCustomizer;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.apache.tomcat.util.http.fileupload.impl.FileStorage;

@Configuration
public class TomcatMultipartConfig {

    @Bean
    public WebServerFactoryCustomizer<TomcatServletWebServerFactory> multipartCustomizer() {
        return factory -> factory.addContextCustomizers(context -> {
            // Allow many fields in multipart request
            context.setAllowCasualMultipartParsing(true);

            // ‚≠ê FIX: Increase file count limit
            context.getMultipartConfigElement()
                   .getFileStorage()
                   .setFileCountMax(50);
        });
    }
}
